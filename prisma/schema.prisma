generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  ACTIVE
  INACTIVE
}

enum VehicleType {
  CAR
  BIKE
  AUTO
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String
  lastName  String?
  password  String
  socketId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Captain {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  firstName String
  lastName  String?
  password  String
  socketId  String?
  status    Status    @default(INACTIVE)
  vehicle   Vehicle?
  location  Location?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Vehicle {
  id        Int         @id @default(autoincrement())
  color     String
  plate     String
  capacity  Int
  type      VehicleType
  captain   Captain     @relation(fields: [captainId], references: [id])
  captainId Int         @unique
}

model Location {
  id        Int     @id @default(autoincrement())
  latitude  Float
  longitude Float
  captain   Captain @relation(fields: [captainId], references: [id])
  captainId Int     @unique
}

model BlacklistedToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime @default(dbgenerated("now() + interval '24 hours'"))
}
